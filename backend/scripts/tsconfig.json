{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist/scripts",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@/models/*": ["../src/models/*"],
      "@/lib/*": ["../src/lib/*"],
      "@/middleware/*": ["../src/middleware/*"],
      "@/routes/*": ["../src/routes/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["../node_modules"]
}
